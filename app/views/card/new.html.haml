.newcardmain
  .newcardmain__title
    クレジットカード情報入力
  = form_tag(pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm",class: 'signup-main') do
    .signup-main__content
      .signup-main__content__cardNum
        %label カード番号
        %span.signup-main__content__require 必須
        %br
        =text_field_tag "number", "", class: "signup-main__content__cardNum__input", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
        %ul.signup-main__content__cardNum__card-list
          %li
            = image_tag '//pcweb-assets.mercdn.net/assets/img/card/visa.svg?2246739708', width: '49', height: '20' 
          %li
            = image_tag '//pcweb-assets.mercdn.net/assets/img/card/master-card.svg?2246739708', width: '34', height: '20'
          %li
            = image_tag '//pcweb-assets.mercdn.net/assets/img/card/saison-card.svg?2246739708', width: '30', height: '20'
          %li
            = image_tag '//pcweb-assets.mercdn.net/assets/img/card/jcb.svg?2246739708', width: '32', height: '20'
          %li
            = image_tag '//pcweb-assets.mercdn.net/assets/img/card/american_express.svg?2246739708', width: '21', height: '20'
          %li
            = image_tag '//pcweb-assets.mercdn.net/assets/img/card/dinersclub.svg?2246739708', width: '32', height: '20'
          %li
            = image_tag '//pcweb-assets.mercdn.net/assets/img/card/discover.svg?2246739708', width: '32', height: '20'
      .signup-main__content__expire
        %label 有効期限
        %span.signup-main__content__require 必須
        %br
        .signup-main__content__expire__list
          %select#exp_month{name: "exp_month", type: "text",class: 'signup-main__content__expire__list__select'}
            %option{value: ""} --
            %option{value: "1"}01
            %option{value: "2"}02
            %option{value: "3"}03
            %option{value: "4"}04
            %option{value: "5"}05
            %option{value: "6"}06
            %option{value: "7"}07
            %option{value: "8"}08
            %option{value: "9"}09
            %option{value: "10"}10
            %option{value: "11"}11
            %option{value: "12"}12
          %span.month-year 月
        .signup-main__content__expire__list
          %select#exp_year{name: "exp_year", type: "text",class: 'signup-main__content__expire__list__select'}
            %option{value: ""} --
            %option{value: "2020"}20
            %option{value: "2021"}21
            %option{value: "2022"}22
            %option{value: "2023"}23
            %option{value: "2024"}24
            %option{value: "2025"}25
            %option{value: "2026"}26
            %option{value: "2027"}27
            %option{value: "2028"}28
            %option{value: "2029"}29
          %span.month-year 年
      .signup-main__content__seqcode
        %label セキュリティコード
        %span.signup-main__content__require 必須
        %br
        = text_field_tag "cvc", "", class: "signup-main__content__seqcode__input", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
      #card_token
      = submit_tag "追加する", id: "token_submit",class: "signup-main__content__addBtn"
= render "users/nav-list"

